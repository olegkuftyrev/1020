// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Add your models here
// Example store data structure - adjust as needed
model StoreData {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Add your store data fields here
}

model Gem {
  id            String   @id @default(uuid())
  count         String
  tasteOfFood   String
  accuracyOfOrder String
  rawJson       Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Product {
  id            String   @id @default(uuid())
  productNumber String   @unique
  productName   String
  unit          String
  w38           String
  w39           String
  w40           String
  w41           String
  conversion    String?
  group         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([productNumber])
  @@index([group])
}

model PlReport {
  id                 String   @id @default(uuid())
  year               Int
  period             Int
  storeName          String
  company            String
  periodString       String
  translationCurrency String  @default("USD")
  fileName           String?
  lineItems          Json
  summaryData        Json
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([year, period], name: "year_period")
  @@index([year])
  @@index([period])
}

model PlQuestion {
  id            String   @id @default(uuid())
  questionId   String   @unique
  label         String
  explanation   String
  formula       String
  a1            String
  a2            String
  a3            String
  a4            String
  correctAnswer String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([questionId])
}

model PdfMetadata {
  id        Int      @id @default(autoincrement())
  pageCount Int      @default(0)
  title     String?
  fileName  String?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuestionSet {
  id              String   @id @default(uuid())
  name            String
  showAnswers     Boolean  @default(true)
  showFormula     Boolean  @default(true)
  showExplanation Boolean  @default(true)
  questionIds     String[]
  results         QuestionSetResult[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([name])
}

model QuestionSetResult {
  id              String      @id @default(uuid())
  questionSetId   String
  questionSet     QuestionSet @relation(fields: [questionSetId], references: [id], onDelete: Cascade)
  answers         Json
  score           Int
  totalQuestions  Int
  completedAt     DateTime    @default(now())

  @@index([questionSetId])
  @@index([completedAt])
}

model Settings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}
